{
  "private": true,
  "name": "boilerplate-node-ddd-ts",
  "version": "1.0.0",
  "description": "domain-driven-design + clean-architecture + hexagonal-architecture + CQRS",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=development webpack",
    "build": "webpack",
    "test": "jest",
    "serve": "yarn build && node dist/app.js"
  },
  "keywords": [
    "nodejs",
    "boilerplate",
    "ddd",
    "domain-driven-design",
    "clean-architecture",
    "hexagonal-architecture",
    "CQRS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ExperimentsLabs/boilerplate-node-ddd-ts"
  },
  "author": {
    "name": "Experiment labs",
    "url": "https://github.com/ExperimentsLabs/boilerplate-node-ddd-ts"
  },
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "amqp-ts": "^1.8.0",
    "bcrypt": "^5.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "handlebars": "^4.7.7",
    "inversify": "^5.1.1",
    "inversify-binding-decorators": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-cookie": "^1.0.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-morgan": "^1.0.1",
    "koa-ratelimit": "^5.0.1",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.7.7",
    "moment": "^2.29.1",
    "mongoose": "^6.0.7",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2",
    "validator": "13.6.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.3",
    "@types/koa-cookie": "^1.0.0",
    "@types/koa-json": "^2.0.20",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa-ratelimit": "^4.2.3",
    "@types/koa-static": "^4.0.2",
    "@types/koa__cors": "^3.0.3",
    "@types/node": "^16.9.6",
    "@types/uuid": "^8.3.1",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.2",
    "@types/webpack-node-externals": "^2.5.2",
    "@typescript-eslint/parser": "^4.31.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-webpack-plugin": "^3.0.1",
    "handlebars-loader": "^1.7.1",
    "jest": "^27.2.1",
    "jest-mock-extended": "^2.0.4",
    "nodemon-webpack-plugin": "^4.5.2",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "endOfLine": "auto"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setupTests.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "modulePaths": [
      "<rootDir>/src"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "prettier",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-var": "warn",
      "no-unused-vars": "off"
    }
  }
}
